<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Последняя версия сжатого CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Последний сжатый JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Главная</a>
                </li>
                <% if(typeof nav == 'object' && nav) { 
                    nav.forEach(function(mango) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/mangoes/<%=mango.nick%>">
                                <%=mango.title%>
                            </a>
                        </li>
                    <% })} %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if(user) { %>
                    <form action="/logout" method="post">
                        <li><button type="submit" class="btn btn-link">Выйти</button></li>
                    </form>
                <% } else { %>
                    <li><a href="/logreg">Войти</a></li>
                <% } %>
            </ul>
        </div>
    </nav>
    <%- body %>
</body>

</html>
